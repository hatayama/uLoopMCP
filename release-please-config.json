{
  "packages": {
    "Packages/src": {
      "release-type": "node",
      "include-v-in-tag": true,
      "include-component-in-tag": false,
      "extra-files": [
        {
          "type": "json",
          "path": "TypeScriptServer~/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "Cli~/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "Cli~/src/default-tools.json",
          "jsonpath": "$.version"
        },
        {
          "type": "generic",
          "path": "Packages/src/TypeScriptServer~/src/version.ts",
          "glob": "Packages/src/TypeScriptServer~/src/version.ts"
        },
        {
          "type": "generic",
          "path": "Packages/src/Cli~/src/version.ts",
          "glob": "Packages/src/Cli~/src/version.ts"
        }
      ]
    }
  }
}
